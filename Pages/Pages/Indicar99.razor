@code {
    private void UsarMeuLink()
    {
        // URL do link de indicação - substitua pelo seu link de convite pessoal
        var linkIndicacao = "https://99app.com/3WwFtj8?resource_id=38";
        
        // Abre o link de indicação em uma nova aba do navegador
        JS.InvokeVoidAsync("window.open", linkIndicacao, "_blank");
    }

    private void CompartilharNoWhatsApp()
    {
        // URL do link de indicação - substitua pelo seu link de convite pessoal
        var linkIndicacao = "https://d.99app.com/velNhPB?resource_id=12";
        var mensagem = $"Ganhe até R$15 em cupons de corrida da 99!Oi, Use meu link para se cadastrar na 99Pay e aproveite! É super rápido e fácil!: {linkIndicacao}";

        // URL para compartilhar via WhatsApp
        var urlWhatsApp = $"https://wa.me/?text={Uri.EscapeDataString(mensagem)}";
        
        // Abre o link de compartilhamento do WhatsApp em uma nova aba do navegador
        JS.InvokeVoidAsync("window.open", urlWhatsApp, "_blank");
    }

 private void CompartilharNoWhatsAppMotorista()
    {
